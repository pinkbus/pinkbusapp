<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_seat"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_height="20dp"
            android:layout_width="330dp">
            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:drawableTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_shopping_cart_white_12dp"
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:text="@string/count_seat"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_count_seat"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="0"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_height="20dp"
            android:layout_width="330dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:drawableTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_local_atm_white_18dp"
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:text="@string/total_amount"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_count_total"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="0"/>
        </TableRow>
    </LinearLayout>
    <ScrollView
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
