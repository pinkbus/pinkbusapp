                    android:id="@+id/btn_seat1"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_event_seat_black_24dp" />

