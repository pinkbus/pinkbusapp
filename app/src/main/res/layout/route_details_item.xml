<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_station_office_name"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_directions_car_white_12dp"
            android:drawableTint="@color/colorPrimary"
            android:text="Ten Nha Xe"
            android:textColor="@color/color1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_departure_time"
            android:layout_width="wrap_content"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_access_time_white_18dp"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="Gio Khoi Hanh"
            android:textColor="@color/color1"
            android:textSize="15sp" />
    </TableRow>

    <TableRow android:layout_marginTop="10dp" android:layout_height="30dp" android:layout_width="match_parent">
        <TextView
            android:gravity="center_vertical"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_event_seat_white_18dp"
            android:id="@+id/tv_type_seat"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color2"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="150dp"
            android:text="Loai Ghe" />
        <TextView
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_access_time_white_18dp"
            android:drawableTint="@color/colorPrimary"
            android:id="@+id/tv_arrival_time"
            android:textColor="@color/color2"
            android:textSize="12sp"
            android:layout_marginLeft="90dp"
            android:layout_width="100dp"
            android:text="Gio Den" />
    </TableRow>
    <TableRow android:layout_marginTop="10dp" android:layout_height="30dp" android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_total_seat"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color2"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="60dp"
            android:text="45 Seats" />

        <TextView
            android:id="@+id/tv_route_time"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:text="10 hrs"
            android:textColor="@color/color2"
            android:textSize="15dp" />
    </TableRow>
    <TableRow android:layout_marginTop="10dp" android:layout_height="30dp" android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_route_price"
            android:layout_marginLeft="220dp"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="130dp"
            android:text="220 000 vnd" />
    </TableRow>
    <include layout="@layout/item_divider"/>
</LinearLayout>